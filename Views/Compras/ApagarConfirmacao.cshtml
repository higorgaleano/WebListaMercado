@model ComprasModel
@{
    ViewData["Title"] = "Confirmação de apagar o Item";
}

<div class="text-center">

    <h3 class="display-8">Realmente deseja apagar o item (@Model.Nome @Model.Marca)?</h3>

</div>

<div class="d-grid gap-2">
    <a class="btn btn-primary w-100" role="button" asp-controller="Compras" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger w-100" role="button" asp-controller="Compras" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>
</div>
